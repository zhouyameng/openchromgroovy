<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.openchrom</groupId>
  <artifactId>parent</artifactId>
  <version>BUILD-VERSION</version>
  <packaging>pom</packaging>
  <!--
	USE MAVEN 3.0
  --> 
  <prerequisites>
    <maven>3.0</maven>
  </prerequisites>
  <!--
	PROPERTIES
  --> 
  <properties>
    <tycho-version>0.13.0</tycho-version>
    <tycho-groupid>org.eclipse.tycho</tycho-groupid>
    <sonatype-groupid>org.sonatype.tycho</sonatype-groupid>
    <maven-groupid>org.apache.maven.plugins</maven-groupid>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <!--
	DESCRIPTION
  --> 
  <name>OpenChrom Groovy-Script Plug-in</name>
  <description>
	The OpenChrom Groovy-Script plug-in offers a solution to edit and analyze chromatograms using Groovy scripts. It extends the functionality of the OpenChrom Rich Client Platform (RCP).
  </description>
  <url>http://sourceforge.net/projects/openchromgroovy</url>
  <!--
	LICENSES
  -->
  <licenses>
    <license>
      <name>EPL v1.0</name>
      <url>http://www.eclipse.org/legal/epl-v10.html</url>
    </license> 
  </licenses>
  <!--
	DEVELOPERS
  -->
  <developers>
    <developer>
      <id>eselmeister</id>
      <name>Philip Wenig</name>
      <email>philip.wenig [at] gmx.net</email>
      <timezone>+1</timezone>
      <roles>
        <role>Developer</role>
      </roles>
    </developer>
  </developers>
  <!--
	MODULES
  -->
  <modules>
    <module>./plugins/net.openchrom.chromatogram.msd.process.supplier.openchromgroovy</module>
    <module>./plugins/net.openchrom.chromatogram.msd.process.supplier.openchromgroovy.fragment.i18n</module>
    <!--<module>./plugins/net.openchrom.chromatogram.msd.process.supplier.openchromgroovy.fragment.test</module>-->
    <module>./plugins/net.openchrom.chromatogram.msd.process.supplier.openchromgroovy.ui</module>
    <module>./plugins/net.openchrom.chromatogram.msd.process.supplier.openchromgroovy.ui.fragment.i18n</module>
    <!--<module>./plugins/net.openchrom.chromatogram.msd.process.supplier.openchromgroovy.ui.fragment.test</module>-->
    <module>./features/net.openchrom.chromatogram.msd.process.supplier.openchromgroovy.feature</module>
    <!--<module>./updateSites/net.openchrom.chromatogram.msd.process.supplier.openchromgroovy.updateSite</module>-->
  </modules>
  <!--
	DEPENDENCIES SHOULD BE EDITED IN EACH MODULE.
  -->
  <!--
	P2 REPOSITORIES
  -->
  <repositories>
   <!-- Use to avoid problems determining the SWT bundle version. -->
   <repository>
     <id>swtbothelios</id>
     <layout>p2</layout>
     <url>http://download.eclipse.org/technology/swtbot/helios/dev-build/update-site</url>
   </repository>
   <repository>
     <id>swtbotgalileo</id>
     <layout>p2</layout>
     <url>http://download.eclipse.org/technology/swtbot/galileo/dev-build/update-site</url>
   </repository>
   <repository>
     <id>indigo</id>
     <layout>p2</layout>
     <url>http://download.eclipse.org/releases/indigo</url>
   </repository>
   <repository>
     <id>helios</id>
     <layout>p2</layout>
     <url>http://download.eclipse.org/releases/helios</url>
   </repository>
   <!--
   <repository>
     <id>galileo</id>
     <layout>p2</layout>
     <url>http://download.eclipse.org/releases/galileo</url>
   </repository>
   <repository>
     <id>ganymede</id>
     <layout>p2</layout>
     <url>http://download.eclipse.org/releases/ganymede</url>
   </repository>
   -->
  </repositories>
  <!--
	PLUGIN REPOSITORIES
  -->
  <!--
	SOURCE CODE MANAGEMENT
  -->
  <scm>
    <connection>scm:git:git://openchromgroovy.git.sourceforge.net/gitroot/openchromgroovy/openchromgroovy</connection>
    <developerConnection>scm:git:ssh://openchromgroovy.git.sourceforge.net/gitroot/openchromgroovy/openchromgroovy</developerConnection>
    <url>http://openchromgroovy.git.sourceforge.net/git/gitweb-index.cgi</url>
  </scm>
  <!--
	BUILD
  -->
  <build>
    <!--
	PLUGINS
    -->  
    <plugins>
      <!--
	Use the maven source code management plugin.
      -->
      <plugin>
	<groupId>${maven-groupid}</groupId>
	<artifactId>maven-scm-plugin</artifactId>
	<configuration>
	  <checkoutDirectory>.</checkoutDirectory>
	</configuration>
      </plugin>
      <!-- 
	Tycho Maven Plugin
      -->
      <plugin>
        <groupId>${tycho-groupid}</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho-version}</version>
        <extensions>true</extensions>
      </plugin>	
      <!--
	Source and target to Java version 1.6, otherwise "method must implement @override" failures will occur.
      -->
      <plugin>
        <groupId>${sonatype-groupid}</groupId>
        <artifactId>maven-osgi-compiler-plugin</artifactId>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <!--
	Use the provisioning system p2 from Eclipse.
      -->
      <plugin>
        <groupId>${tycho-groupid}</groupId>
        <artifactId>target-platform-configuration</artifactId>
        <version>${tycho-version}</version>
        <configuration>
          <resolver>p2</resolver>
        </configuration>
      </plugin>
      <!--
	Settings of the JUnit-Tests.
      -->
      <plugin>
        <groupId>${sonatype-groupid}</groupId>
        <artifactId>maven-osgi-test-plugin</artifactId>
        <configuration>
          <useUIHarness>false</useUIHarness>
          <argLine>-Xmx500m -XX:MaxPermSize=256m</argLine>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
